{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build server",
			"command": "/usr/bin/gcc-11",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/lib/*.c",
				"${workspaceFolder}/test_server.c",
				"-o",
				"${workspaceFolder}/build/server.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc-11"
		},
		{
			"type": "cppbuild",
			"label": "build client",
			"command": "/usr/bin/gcc-11",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/lib/*.c",
				"${workspaceFolder}/sensor_node.c",
				"-o",
				"${workspaceFolder}/build/client.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}